{
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "env": {
    "node": true
  },

  "rules": {
    "semi": [
      2,
      "never"
    ],

    "comma-dangle": ["error", "never"],
    "max-len": [2, 100, 4],
    "quotes": [2, "single"],
    "arrow-parens": ["error", "as-needed", { "requireForBlockBody": false }],
    "import/no-extraneous-dependencies": "off",

    "no-console": [
      "error",
      {
        "allow": ["warn", "error", "info"]
      }
    ],

    "no-param-reassign": ["error", { "props": false }]
  }
}
